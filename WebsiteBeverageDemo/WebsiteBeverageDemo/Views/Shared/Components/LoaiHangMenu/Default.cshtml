@model IEnumerable<LoaiHang>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all" style="background-color: #007bff !important">
            <i class="fa fa-bars"></i>
            <span>Danh mục</span>
        </div>
        <ul>
            @foreach(var item in Model)
            {
                <li><a asp-action="SanPhamTheoLoai" asp-controller="Home" asp-route-maloai="@item.MaLoai">@item.TenLoai</a></li>
            }
        </ul>
    </div>
</div>
