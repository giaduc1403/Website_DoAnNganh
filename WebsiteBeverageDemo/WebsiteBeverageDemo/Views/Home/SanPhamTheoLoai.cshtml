<!-- Featured Section Begin -->
<section class="featured spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>Featured Product</h2>
				</div>
				<div class="featured__controls">
					<ul>
						<li class="active" data-filter="*">All</li>
						<li data-filter=".oranges">Oranges</li>
						<li data-filter=".fresh-meat">Fresh Meat</li>
						<li data-filter=".vegetables">Vegetables</li>
						<li data-filter=".fastfood">Fastfood</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="row featured__filter">
			@if (Model != null && Model.Count() > 0)
			{
				foreach (var item in Model)
				{
					string url = $"/{item.TenSp}-{item.MaSp}.html";
					<div class="col-lg-4 col-md-6 col-sm-6">
						<div class="product__item">
							<div class="product__item__pic set-bg" data-setbg="../images/products/@item.AnhSp">
								<ul class="product__item__pic__hover">
									<li><a href="#"><i class="fa fa-heart"></i></a></li>
									<li><a href="#"><i class="fa fa-retweet"></i></a></li>
									<li class="add-to-cart"><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
								</ul>
							</div>
							<div class="product__item__text">
								<h6><a href="@url">@item.TenSp</a></h6>
								<h5>@item.GiaBan.Value.ToString("#,##0") VNĐ</h5>
							</div>
						</div>
					</div>
				}
			}
			<div class="pagination-area pt-10">
				<ul class="pagination justify-content-center">
					<pager class="pager-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" asp-area="" asp-controller="Home" asp-action="Index" />
				</ul>
			</div>
		</div>

	</div>
</section>
<!-- Featured Section End -->
