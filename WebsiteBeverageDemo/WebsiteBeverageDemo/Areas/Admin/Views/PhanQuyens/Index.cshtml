@model IEnumerable<WebsiteBeverageDemo.Models.PhanQuyen>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Idquyen</th>
                        <td>@item.TenQuyen</td>
                        <td>
                            <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="PhanQuyens" asp-action="Details" asp-route-id="@item.Idquyen">View</a>
                            <a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="PhanQuyens" asp-action="Edit" asp-route-id="@item.Idquyen">Edit</a>
                            <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="PhanQuyens" asp-action="Delete" asp-route-id="@item.Idquyen">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
