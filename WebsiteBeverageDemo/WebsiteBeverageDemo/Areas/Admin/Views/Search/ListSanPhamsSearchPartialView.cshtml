@model List<SanPham>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @item.MaSp
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                    <h6 class="m-b-0 m-l-10">@item.TenSp</h6>
                </div>
            </td>
            <td>@item.GiaBan.Value.ToString("#,##0") VNĐ</td>
            <td>@item.Soluong</td>
            <td>@item.MaLoaiNavigation.TenLoai</td>
            <td>
                <div class="d-flex align-items-center">
                    <div>@item.MoTa</div>
                </div>
            </td>
            <td class="text-right">
                <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="AdminSanPhams" asp-action="Details" asp-route-id="@item.MaSp">View</a>
                <a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="AdminSanPhams" asp-action="Edit" asp-route-id="@item.MaSp">Edit</a>
                <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminSanPhams" asp-action="Delete" asp-route-id="@item.MaSp">Delete</a>
            </td>
        </tr>
    }
}

